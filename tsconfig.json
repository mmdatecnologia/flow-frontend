{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@root": ["./"],
      "@root/*": ["./*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@public/*": ["./public/*"],
      "@public": ["./public"],
      "@tests/*": ["./__tests__/*"],
      "@tests": ["./__tests__"],
      "@themes": ["./src/themes"],
      "@themes/*": ["./src/themes/*"],
      "@styles": ["./src/styles"],
      "@styles/*": ["./src/styles/*"],
      "@contexts": ["./src/contexts"],
      "@contexts/*": ["./src/contexts/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
